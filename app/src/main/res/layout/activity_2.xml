<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding = "48dp"
        tools:context=".Activity2">


    <TextView
            android:text="PIS2020"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:layout_height="0dp" android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:inputType="textPersonName"
            android:text="usuari"
            android:ems="10"
            tools:layout_editor_absoluteY="203dp" tools:layout_editor_absoluteX="95dp" android:id="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="contraseña"
            android:ems="10"
            tools:layout_editor_absoluteY="284dp" tools:layout_editor_absoluteX="93dp" android:id="@+id/editText2"/>

    <Button
            android:text="entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="95dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="124dp" android:id="@+id/button"/>
    <Button
            android:text="olvidaste contraseña ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="36dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="124dp" android:id="@+id/button4"/>
    <TextView
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal|bottom"
    />
</LinearLayout>